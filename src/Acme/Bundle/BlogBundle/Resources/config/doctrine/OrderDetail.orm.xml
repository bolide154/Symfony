<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Acme\Bundle\BlogBundle\Entity\OrderDetailRepository" name="Acme\Bundle\BlogBundle\Entity\OrderDetail" table="order_detail">
    <indexes>
      <index name="fk_order_detail_1_idx" columns="order_id"/>
      <index name="fk_order_detail_1_idx1" columns="product_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="quantity" type="integer" column="quantity" nullable="false"/>
    <field name="price" type="decimal" column="price" precision="20" scale="0" nullable="true"/>
    <many-to-one field="product" target-entity="Product">
      <join-columns>
        <join-column name="product_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="order" target-entity="Order">
      <join-columns>
        <join-column name="order_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
