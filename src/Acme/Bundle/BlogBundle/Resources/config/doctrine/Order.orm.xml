<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Acme\Bundle\BlogBundle\Entity\OrderRepository" name="Acme\Bundle\BlogBundle\Entity\Order" table="order">
    <indexes>
      <index name="fk_order_1_idx" columns="customer_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="shippingAddress" type="string" column="shipping_address" length="255" nullable="false"/>
    <field name="dateAdded" type="datetime" column="date_added" nullable="true"/>
    <field name="dateModified" type="datetime" column="date_modified" nullable="true"/>
    <field name="statusId" type="integer" column="status_id" nullable="true"/>
    <many-to-one field="customer" target-entity="Customer">
      <join-columns>
        <join-column name="customer_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
